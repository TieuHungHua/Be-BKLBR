model User {
  id                String             @id @default(uuid())
  displayName       String             @map("display_name")
  avatar            String?
  classMajor        String?            @map("class_major")
  role              UserRole           @default(student)
  totalBorrowed     Int                @default(0) @map("total_borrowed")
  totalReturned     Int                @default(0) @map("total_returned")
  totalLikes        Int                @default(0) @map("total_likes")
  totalComments     Int                @default(0) @map("total_comments")
  activityScore     Int                @default(0) @map("activity_score")
  createdAt         DateTime           @default(now()) @map("created_at")
  password          String
  username          String             @unique
  email             String?            @unique
  phone             String?            @unique
  studentId         String?            @map("student_id")
  activities        Activity[]
  borrows           Borrow[]
  comments          Comment[]
  interactions      Interaction[]
  pointTransactions PointTransaction[]
  redeems           Redeem[]
  meetingBookings   MeetingBooking[]

  @@index([role])
  @@map("users")
}

model Book {
  id              String        @id @default(uuid())
  title           String
  author          String
  categories      String[]      @default([])
  coverImage      String?       @map("cover_image")
  description     String?
  publisher       String?
  publicationYear Int?          @map("publication_year")
  pages           Int?
  availableCopies Int           @default(0) @map("available_copies")
  likeCount       Int           @default(0) @map("like_count")
  commentCount    Int           @default(0) @map("comment_count")
  borrowCount     Int           @default(0) @map("borrow_count")
  createdAt       DateTime      @default(now()) @map("created_at")
  activities      Activity[]
  borrows         Borrow[]
  comments        Comment[]
  interactions    Interaction[]

  @@index([title])
  @@index([author])
  @@map("books")
}

model Borrow {
  id         String       @id @default(uuid())
  userId     String       @map("user_id")
  bookId     String       @map("book_id")
  borrowedAt DateTime     @default(now()) @map("borrowed_at")
  dueAt      DateTime     @map("due_at")
  returnedAt DateTime?    @map("returned_at")
  status     BorrowStatus @default(active)
  book       Book         @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([bookId])
  @@index([status, dueAt])
  @@index([borrowedAt(sort: Desc)])
  @@map("borrows")
}

model Interaction {
  id        String          @id @default(uuid())
  userId    String          @map("user_id")
  bookId    String          @map("book_id")
  type      InteractionType
  content   String?
  createdAt DateTime        @default(now()) @map("created_at")
  book      Book            @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user      User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId, type])
  @@index([bookId, type])
  @@index([userId, createdAt(sort: Desc)])
  @@map("interactions")
}

model Comment {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  bookId    String   @map("book_id")
  content   String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@index([bookId, createdAt(sort: Desc)])
  @@index([userId, createdAt(sort: Desc)])
  @@map("comments")
}

model PointTransaction {
  id        String      @id @default(uuid())
  userId    String      @map("user_id")
  delta     Int
  reason    PointReason
  refType   String?     @map("ref_type")
  refId     String?     @map("ref_id")
  note      String?
  createdAt DateTime    @default(now()) @map("created_at")
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([reason])
  @@map("point_transactions")
}

model Reward {
  id          String     @id @default(uuid())
  name        String
  description String?
  costPoints  Int        @map("cost_points")
  stock       Int        @default(0)
  active      Boolean    @default(true)
  activities  Activity[]
  redeems     Redeem[]

  @@index([active])
  @@map("rewards")
}

model Redeem {
  id         String       @id @default(uuid())
  userId     String       @map("user_id")
  rewardId   String       @map("reward_id")
  costPoints Int          @map("cost_points")
  status     RedeemStatus @default(pending)
  note       String?
  createdAt  DateTime     @default(now()) @map("created_at")
  reward     Reward       @relation(fields: [rewardId], references: [id], onDelete: Cascade)
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt(sort: Desc)])
  @@index([status, createdAt(sort: Desc)])
  @@map("redeems")
}

model Activity {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  eventType EventType @map("event_type")
  bookId    String?   @map("book_id")
  rewardId  String?   @map("reward_id")
  payload   Json?
  createdAt DateTime  @default(now()) @map("created_at")
  book      Book?     @relation(fields: [bookId], references: [id])
  reward    Reward?   @relation(fields: [rewardId], references: [id])
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([createdAt(sort: Desc)])
  @@index([userId, createdAt(sort: Desc)])
  @@index([eventType, createdAt(sort: Desc)])
  @@map("activities")
}

enum UserRole {
  student
  admin
  lecturer
}

enum BorrowStatus {
  active
  returned
  overdue
}

enum InteractionType {
  like
  comment
}

enum EventType {
  borrow
  return
  like
  comment
  redeem
}

enum PointReason {
  borrow
  return_on_time
  return_late
  like
  comment
  redeem
}

enum RedeemStatus {
  pending
  approved
  delivered
}

model MeetingBooking {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  tableName String   @map("table_name")
  startAt   DateTime @map("start_at")
  endAt     DateTime @map("end_at")
  purpose   String?
  attendees Int?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, startAt(sort: Desc)])
  @@index([tableName, startAt(sort: Desc)])
  @@map("meeting_bookings")
}
