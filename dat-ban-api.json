{
  "openapi": "3.0.3",
  "info": {
    "title": "Meeting Booking API",
    "version": "1.0.0",
    "description": "API specification for meeting table booking"
  },
  "paths": {
    "/meeting-bookings": {
      "post": {
        "summary": "Create a meeting table booking",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateMeetingBookingDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Meeting booking created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeetingBookingResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid data or time slot conflict"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "get": {
        "summary": "List meeting table bookings",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Meeting booking list",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeetingBookingListResponse"
                }
              }
            }
          }
        }
      }
    },
    "/meeting-bookings/{id}": {
      "get": {
        "summary": "Get meeting table booking by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Meeting booking detail",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeetingBookingResponse"
                }
              }
            }
          },
          "404": {
            "description": "Meeting booking not found"
          }
        }
      },
      "patch": {
        "summary": "Update meeting table booking",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateMeetingBookingDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Meeting booking updated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeetingBookingResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid data or time slot conflict"
          },
          "404": {
            "description": "Meeting booking or user not found"
          }
        }
      },
      "delete": {
        "summary": "Cancel meeting table booking",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Meeting booking deleted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MeetingBookingResponse"
                }
              }
            }
          },
          "400": {
            "description": "userId is required"
          },
          "404": {
            "description": "Meeting booking or user not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateMeetingBookingDto": {
        "type": "object",
        "required": [
          "userId",
          "tableName",
          "startAt",
          "endAt"
        ],
        "properties": {
          "userId": {
            "type": "string",
            "example": "uuid-user-id"
          },
          "tableName": {
            "type": "string",
            "example": "Table A1"
          },
          "startAt": {
            "type": "string",
            "format": "date-time"
          },
          "endAt": {
            "type": "string",
            "format": "date-time"
          },
          "purpose": {
            "type": "string"
          },
          "attendees": {
            "type": "integer",
            "minimum": 1
          }
        }
      },
      "UpdateMeetingBookingDto": {
        "type": "object",
        "required": [
          "userId"
        ],
        "properties": {
          "userId": {
            "type": "string",
            "example": "uuid-user-id"
          },
          "tableName": {
            "type": "string",
            "example": "Table A2"
          },
          "startAt": {
            "type": "string",
            "format": "date-time"
          },
          "endAt": {
            "type": "string",
            "format": "date-time"
          },
          "purpose": {
            "type": "string"
          },
          "attendees": {
            "type": "integer",
            "minimum": 1
          }
        }
      },
      "MeetingBookingUser": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "displayName": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "student",
              "admin",
              "lecturer"
            ]
          }
        }
      },
      "MeetingBookingResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "user": {
            "$ref": "#/components/schemas/MeetingBookingUser"
          },
          "tableName": {
            "type": "string"
          },
          "startAt": {
            "type": "string",
            "format": "date-time"
          },
          "endAt": {
            "type": "string",
            "format": "date-time"
          },
          "purpose": {
            "type": "string",
            "nullable": true
          },
          "attendees": {
            "type": "integer",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "MeetingBookingListResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MeetingBookingResponse"
            }
          },
          "criteria": {
            "type": "object",
            "properties": {
              "page": {
                "type": "integer"
              },
              "limit": {
                "type": "integer"
              },
              "total": {
                "type": "integer"
              },
              "totalPages": {
                "type": "integer"
              }
            }
          }
        }
      }
    }
  }
}
